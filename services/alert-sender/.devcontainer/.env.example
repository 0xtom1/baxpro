# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE CONNECTION
# =============================================================================
# Option 1: DATABASE_URL (recommended for local dev with Cloud SQL Proxy)
# Run: cloud-sql-proxy YOUR_PROJECT_ID:us-central1:YOUR_DB_INSTANCE --port 5432
DATABASE_URL=postgresql://your_user:your_password_here@localhost:5432/your_database

# Option 2: Individual params with Unix socket (Cloud Run only)
# DB_USER=your_user
# DB_PASS=your_password_here
# DB_NAME=your_database
# INSTANCE_UNIX_SOCKET=/cloudsql/YOUR_PROJECT_ID:us-central1:YOUR_DB_INSTANCE

# =============================================================================
# GCP SETTINGS (optional for local dev)
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
PUBSUB_TOPIC=your-pubsub-topic

# =============================================================================
# POLLING CONFIGURATION
# =============================================================================
POLL_INTERVAL_SEC=60
BAXUS_API_BASE=https://api.baxus.co
BAXUS_API_KEY=

# Environment
ENVIRONMENT=dev